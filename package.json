{
  "name": "ci-cd",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --respawn ./src/main.ts",
    "build": "tsc -p .",
    "prod": "node ./dist/main.js",
    "test": "jest",
    "test:cov": "jest --coverage",
    "lint": "eslint . --ext .ts && prettier --check .",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "husky": "^8.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "husky": "^8.0.0",
    "jest": "^29.6.4",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "src/*/.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
